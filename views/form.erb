<div class="card">
  <div class="card-body">
    <form method="post">
      <div class="form-group">
        <label for="webhookUrl">Webhook URL</label>
        <input type="text" class="form-control" id="webhookUrl" name="url" value="<%= @url %>"
        pattern="https:\/\/discordapp.com\/api\/webhooks\/\d+\/.*"
        title="See below for help" required>
      </div>

      <div class="form-group">
        <label>Categories</label>
        <% @categories.each do |category, value| %>
          <div class="form-check">
            <label class="form-check-label" for="<%= category %>">
              <input class="form-check-input" type="checkbox" id="<%= category %>"
              name="categories[<%= category %>]" value="1" <%= 'checked' if value == '1' %>>
              <%= category.capitalize %>
            </label>
          </div>
        <% end %>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary">Subscribe</button>
      </div>
    </form>
  </div>
</div>
